<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_sky"
    android:orientation="vertical"
    tools:context=".activity.HospitalAddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름" />

        <EditText
            android:id="@+id/nameEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_white_round"
            android:gravity="center_vertical"
            android:hint="부민병원"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="진료시간" />

        <EditText
            android:id="@+id/availableTimeEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_white_round"
            android:gravity="center_vertical"
            android:hint="10:00 ~ 18:00"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="전화번호" />

        <EditText
            android:id="@+id/hospitalNumEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_white_round"
            android:gravity="center_vertical"
            android:hint="051-000-0000"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="병원주소" />

        <EditText
            android:id="@+id/addressEdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_white_round"
            android:gravity="center_vertical"
            android:hint="부산 사상구"
            android:paddingLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="정보" />

        <EditText
            android:id="@+id/detailEdt"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/background_white_round"
            android:gravity="top"
            android:hint="병원 정보를 작성해주세요"
            android:padding="5dp" />

    </LinearLayout>

</LinearLayout>